extends layout

block content
    section#contact.dark-bg
      .container
        .row
          .col-lg-12.text-center
            .section-title
              h2 Contact Us
              p
                | If you have some Questions or need Help! Please Contact Us!
                br
                | We make Cool and Clean Design for your Business
        .row
          .col-md-3
            .section-text
              h4 Our Business Office
              p 3422 Street, Barcelona 432, Spain, New Building North, 15th Floor
              p
                i.fa.fa-phone
                |  +101 377 655 22125
              p
                i.fa.fa-envelope
                |  mail@yourcompany.com
          .col-md-3
            .section-text
              h4 Business Hours
              p
                i.fa.fa-clock-o
                span.day Weekdays:
                span 9am to 8pm
              p
                i.fa.fa-clock-o
                span.day Saturday:
                span 9am to 2pm
              p
                i.fa.fa-clock-o
                span.day Sunday:
                span Closed
          .col-md-6
            p #{success}
            form#contactForm(name='sentMessage', novalidate='', action='/contact', method='post')
              .row
                .col-md-6
                  .form-group
                    input#name.form-control(type='text', name='name', placeholder='Your Name *', required='', data-validation-required-message='Please enter your name.')
                    p.help-block.text-danger
                .col-md-6
                  .form-group
                    input#email.form-control(type='email', name='email', placeholder='Your Email *', required='', data-validation-required-message='Please enter your email address.')
                    p.help-block.text-danger
              .row
                .col-md-12
                  .form-group
                    textarea#message.form-control(name='text', placeholder='Your Message *', required='', data-validation-required-message='Please enter a message.')
                    p.help-block.text-danger
                .clearfix
              .row
                .col-lg-12.text-center
                  #success
                  button.btn(type='submit') Send Message


